    <!-- Title bar for potentiometer -->
	
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background='@color/title_bar'
    >
		<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/pot_header"
	    android:id="@+id/text_view3"
	    />
    </LinearLayout>
    
    <!-- Creating progress bar for potentiometer -->
    <ProgressBar
    android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/progress_bar"
	android:progress="0"
	android:max="100"
	style="?android:attr/progressBarStyleHorizontal"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/actual_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/actual_data"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/actual_imei_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/actual_position"
        android:layout_alignTop="@+id/actual_imei_label"
        android:text="@string/actual_imei_label"/>
    <TextView
        android:id="@+id/value_actual_imei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/actual_position"
        android:layout_toRightOf="@id/actual_imei_label"
        android:text="@string/actual_imei_label"/>
    <TextView
        android:id="@+id/actual_position_lat_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/actual_imei_label"
        android:layout_alignTop="@+id/actual_position_lat_label"
        android:text="@string/actual_position_lat_label"/>
    <TextView
        android:id="@+id/value_actual_position_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/value_actual_imei"
        android:layout_toRightOf="@id/actual_position_lat_label"
        android:text="@string/actual_position_lat_label"/>
    <TextView
        android:id="@+id/actual_position_long_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/actual_position_lat_label"
        android:layout_alignTop="@+id/actual_position_long_label"
        android:text="@string/actual_position_long_label"/>
    <TextView
        android:id="@+id/value_actual_position_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/value_actual_position_lat"
        android:layout_toRightOf="@id/actual_position_long_label"
        android:text="@string/actual_position_long_label"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_geofence_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/geofence"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/label_latitude_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/label_geofence_1"
            android:layout_alignTop="@+id/value_latitude_1"
            android:text="@string/latitude"/>
        <EditText
            android:id="@+id/value_latitude_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/label_geofence_1"
            android:layout_toRightOf="@id/label_latitude_1"
            android:inputType="numberDecimal|numberSigned" />
        <TextView
            android:id="@+id/label_longitude_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/label_latitude_1"
            android:layout_alignTop="@+id/value_longitude_1"
            android:text="@string/longitude"/>
        <EditText
            android:id="@+id/value_longitude_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/label_longitude_1"
            android:layout_below="@id/value_latitude_1"
            android:inputType="numberDecimal|numberSigned" />
        <TextView
            android:id="@+id/label_radius_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/label_longitude_1"
            android:layout_alignTop="@+id/value_radius_1"
            android:text="@string/radius"/>
        <EditText
            android:id="@+id/value_radius_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/value_longitude_1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/label_radius_1"
            android:inputType="numberDecimal" />
        <!-- Register and unregister geofences buttons. -->
        <Button
            android:id="@+id/register"
            android:layout_below="@id/value_radius_1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/register_geofence"
            android:onClick="onRegisterGeofenceClicked" />
        <Button
            android:id="@+id/unregister"
            android:layout_below="@id/value_radius_1"
            android:layout_toRightOf="@id/register"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/unregister_geofence"
            android:onClick="onUnregisterGeofenceClicked" />
        <Button
            android:id="@+id/set_to_here"
            android:layout_below="@id/value_radius_1"
            android:layout_toRightOf="@id/unregister"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/set_to_here"
            android:onClick="onSetToHereClicked" />

        <!-- Senmicro Logo and link.  MUST BE LAST!!  This item fills the remaining of the vertical space -->
        <ImageView
            android:id="@+id/logo_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="100px"
            android:src="@drawable/senmicro_logo"
            android:layout_below="@+id/register"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_bottom"
            android:text="@string/weblink"
            android:gravity="center"
            />

    </RelativeLayout>

</LinearLayout>
