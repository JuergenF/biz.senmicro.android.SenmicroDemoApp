	    />
    </LinearLayout>
    
    <!-- LED control buttons -->
    
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

		<view
		class="biz.senmicro.android.SenmicroDemo.LEDControl"
		android:id="@+id/led_7"
