		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		/>
		<view
		class="biz.senmicro.android.SenmicroDemo.LEDControl"
		android:id="@+id/led_4"
		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		/>
		<view
		class="biz.senmicro.android.SenmicroDemo.LEDControl"
		android:id="@+id/led_3"
		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		/>
		<view
		class="biz.senmicro.android.SenmicroDemo.LEDControl"
		android:id="@+id/led_2"
		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		/>
		<view
		class="biz.senmicro.android.SenmicroDemo.LEDControl"
		android:id="@+id/led_1"
		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		/>
		<view
		class="biz.senmicro.android.SenmicroDemo.LEDControl"
		android:id="@+id/led_0"
		android:layout_height="wrap_content" 
		android:src="@drawable/led_off"
		android:background="@null" 
		android:layout_width="wrap_content"	
		/>

	</LinearLayout>


	<!-- Title bar for push buttons -->
	
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background='@color/title_bar'
    >
		<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/button_header"
	    android:id="@+id/text_view2"
	    />
    </LinearLayout>
 
 	<!-- Creation of Button 1 -->
    
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@color/sub_title"
	    >
		    <TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/button_1"
		    android:paddingRight="8sp"
		    />
    	</LinearLayout>
    	
   		<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
		    <TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/not_pressed"
		    android:id="@+id/button1"
		    />
		</LinearLayout>
    </LinearLayout>
    
	<!-- Creation of Button 2 -->
    
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@color/sub_title"
	    >
		    <TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/button_2"
		    android:paddingRight="8sp"
		    />
    	</LinearLayout>
    	
   		<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
		    <TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/not_pressed"
		    android:id="@+id/button2"
		    />
		</LinearLayout>
    </LinearLayout>
    
    <!-- Creation of Button 3 -->
    
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@color/sub_title"
	    >
		    <TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/button_3"
		    android:paddingRight="8sp"
		    />
    	</LinearLayout>
    	
   		<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
		    <TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/not_pressed"
		    android:id="@+id/button3"
		    />
		</LinearLayout>
    </LinearLayout>
    
    <!-- Creation of Button 4 -->
    
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@color/sub_title"
	    >
		    <TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/button_4"
		    android:paddingRight="8sp"
		    />
    	</LinearLayout>
    	
   		<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
		    <TextView  
		    android:layout_width="fill_parent" 
